    <modelVersion>4.0.0</modelVersion>

    <name>Squiggly Java</name>
    <url>https://github.com/bohnman/squiggly-java</url>
    <description>The Squiggly Filter is a Jackson JSON PropertyFilter, which selects properties of an object/list/map using a subset of the Facebook Graph API filtering syntax.</description>
    <groupId>com.github.bohnman</groupId>
    <artifactId>squiggly</artifactId>
    <packaging>pom</packaging>
    <version>2.0.0-SNAPSHOT</version>

    <licenses>
        <license>
            <name>BSD License</name>
            <url>https://raw.githubusercontent.com/bohnman/squiggly-java/master/LICENSE.md</url>
        </license>
    </licenses>
    <developers>
        <developer>
            <name>Ryan Bohn</name>
        </developer>
    </developers>
    <scm>
        <connection>scm:git:git://github.com/bohnman/squiggly-java.git</connection>
        <developerConnection>scm:git:ssh://github.com:bohnman/squiggly-java.git</developerConnection>
        <url>https://github.com/bohnman/squiggly-java/tree/master</url>
    </scm>

    <distributionManagement>
        <snapshotRepository>
            <id>ossrh</id>
            <url>https://oss.sonatype.org/content/repositories/snapshots</url>
        </snapshotRepository>
        <repository>
            <id>ossrh</id>
            <url>https://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
        </repository>
    </distributionManagement>


    <modules>
        <module>spring-boot-starter-squiggly</module>
        <module>squiggly-core</module>
        <module>squiggly-jackson</module>
        <module>squiggly-parent</module>
    </modules>
</project>